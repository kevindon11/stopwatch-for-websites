{
  "name": "Site Stopwatch (Today)",
  "version": "1.0.1",
  "version_name": "2025-09-26 17:08 UTC (popup keeps timing)",
  "manifest_version": 3,
  "description": "Counts up time spent today on selected sites while their tabs are active.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Site Stopwatch",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
